<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KonselorHaloDent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/blue</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

     <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.BoldBlack">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Text.BoldWhite">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Text.BoldBlue">
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Text.Semibold">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Text.SemiboldWhite">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>


    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/background_btn_blue</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/background_btn_green</item>
    </style>

    <style name="Button.Red">
        <item name="android:background">@drawable/background_btn_red</item>
    </style>

    <style name="Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAlignment">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Button.TextButtonWhite" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="TextInputLayout.dropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="TextInputLayout.clear" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextInputEditText.inputText">
        <item name="android:editTextStyle">@style/TextInputEditText</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TextInputEditText.inputTextMulti">
        <item name="android:editTextStyle">@style/TextInputEditText</item>
        <item name="android:inputType">text|textMultiLine</item>
    </style>

    <style name="TextInputEditText.inputPhone">
        <item name="android:editTextStyle">@style/TextInputEditText</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="TextInputEditText.inputEmail">
        <item name="android:editTextStyle">@style/TextInputEditText</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="TextInputEditText.inputPassword">
        <item name="android:editTextStyle">@style/TextInputEditText</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

</resources>