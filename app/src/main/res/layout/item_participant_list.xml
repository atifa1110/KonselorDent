<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clParticipant"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/layout_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_user" />

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/ic_circle_green" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_nama_user"
        style="@style/Text.Semibold"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/layout_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/participant_name" />

    <TextView
        android:id="@+id/tv_online"
        style="@style/Text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/layout_image"
        android:layout_below="@id/tv_nama_user"
        tools:text="@string/Online"
        android:textColor="@color/green"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_role"
        style="@style/Text.Black"
        android:layout_below="@id/tv_online"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/layout_image"
        android:text="@string/konselor"
        android:textSize="12sp" />

</RelativeLayout>