<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    tools:context=".Chat.ChatPersonalFragment">

    <include
        android:id="@+id/ll_empty_chat"
        layout="@layout/layout_empty_chat"
        android:visibility="gone"/>

    <include
        android:id="@+id/ll_search_view"
        layout="@layout/layout_search_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_search_view">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chats_personel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp" />
    </ScrollView>

</RelativeLayout>