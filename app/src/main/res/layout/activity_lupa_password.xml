<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LupaPasswordActivity">

    <include
        android:id="@+id/appbar"
        layout="@layout/custom_action_layout" />

    <TextView
        android:id="@+id/tv_lupa_pass"
        style="@style/Text.BoldBlack"
        android:text="@string/lupa_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <TextView
        android:id="@+id/tv_sign_in"
        style="@style/Text"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:text="@string/silahkan_masukkan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lupa_pass" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email_password"
        style="@style/TextInputLayout.clear"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        app:startIconDrawable="@drawable/ic_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_in">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email_lupa"
            style="@style/TextInputEditText.inputEmail"
            android:hint="@string/email_address"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kirim"
        style="@style/Button.Green"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:text="@string/kirim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_email_password" />


</androidx.constraintlayout.widget.ConstraintLayout>