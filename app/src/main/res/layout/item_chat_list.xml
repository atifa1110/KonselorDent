<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <LinearLayout
        android:id="@+id/llChatList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_chat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_user"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name_chat"
                style="@style/Text.Semibold"
                android:maxLines="2"
                android:textSize="16sp"
                tools:text="Full Name"/>

            <TextView
                android:id="@+id/tv_last_message_chat"
                style="@style/Text"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:textSize="13sp"
                tools:text="Last Message" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_last_message_time_chat"
                style="@style/Text"
                tools:text="09:00"/>

            <TextView
                android:id="@+id/tv_unread_count_chat"
                style="@style/Text"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                tools:text="3"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>